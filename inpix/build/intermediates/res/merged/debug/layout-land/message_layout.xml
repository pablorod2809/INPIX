<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/lytLayout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:background="#555555"
  android:padding="0dip">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff000000"
        android:id="@+id/msglayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/previewPhoto"
            android:layout_gravity="center"
            android:longClickable="false"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_margin="4dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <Button
                    android:id="@+id/button_cancel"
                    style="@style/button_textmax.r"
                    android:layout_width="225dp"
                    android:layout_height="52dp"
                    android:layout_gravity="bottom|left"
                    android:layout_marginRight="10dp"
                    android:alpha="0.8"
                    android:background="@drawable/btn_round_red"
                    android:gravity="center_vertical|center_horizontal|left"
                    android:paddingLeft="10dp"
                    android:text="@string/activities_main_cancel"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_sendImage"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginLeft="4dp"
                    android:alpha="0.8"
                    android:background="@drawable/btn_round_green"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:paddingRight="10dp"
                    android:text="@string/activities_main_share"
                    android:textSize="24dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </FrameLayout>

        <ImageButton
            android:layout_width="47dp"
            android:layout_height="53dp"
            android:id="@+id/btnRight"
            android:layout_gravity="right|top"
            android:focusable="false"
            android:src="@drawable/btn_right"
            android:background="#00961a37"
            android:alpha="0.9"
            android:adjustViewBounds="false"
            android:layout_margin="25dp"
            android:scaleType="fitXY" />

        <ImageButton
            android:layout_width="47dp"
            android:layout_height="53dp"
            android:id="@+id/btnLeft"
            android:layout_gravity="left|top"
            android:src="@drawable/btn_left"
            android:alpha="0.9"
            android:background="#0229a8c6"
            android:layout_margin="25dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="false" />

    </FrameLayout>

</RelativeLayout>