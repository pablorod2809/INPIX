<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/Base.CardView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="2dp"
    android:orientation="horizontal"
    android:padding="4dp"
    card_view:cardBackgroundColor="?android:attr/colorBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/background_dark">

        <ImageView
            android:id="@+id/bgImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/forest" />

        <ImageView
            android:id="@+id/logoEvent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/titleItemEvent"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/secondary_text_material_light"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/forest" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menuselect_camera_facing_back" />

        <ImageView
            android:id="@+id/imgPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/titleItemEvent"
            android:layout_alignEnd="@+id/logoEvent"
            android:layout_alignRight="@+id/logoEvent"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_lock_idle_lock"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_toStartOf="@+id/imageView3"
            android:gravity="top|right"
            android:paddingBottom="10dp"
            android:paddingEnd="2dp"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:text="345 images"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitleItemEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="0dp"
            android:shadowColor="@android:color/background_dark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:text="@string/invite_take_images"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_above="@+id/votes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/titleItemEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/subtitleItemEvent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:shadowColor="@android:color/background_dark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:text="Title of event"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.v7.widget.CardView>