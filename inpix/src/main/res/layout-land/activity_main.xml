<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center_vertical|center_horizontal"
tools:context=".activities.MainActivity"
android:clickable="false"
android:background="#9163A6">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/linearLayout"
    android:weightSum="1">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:src="@drawable/logo_pantalla"
        android:layout_weight="0.30"
        android:layout_margin="20dp"
        android:scaleType="centerInside" />

    <FrameLayout
        android:layout_width="232dp"
        android:layout_height="match_parent"
        android:layout_weight="0.40"></FrameLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/btnMenu"
        android:src="@drawable/btn_menu"
        android:background="#00961a37"
        android:clickable="true"
        android:layout_weight="0.16" />
</LinearLayout>

<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="130dp"
    android:id="@+id/lytLayout"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="false"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp">

    <Button
        android:id="@+id/button_changeevt"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="3dp"
        android:background="@drawable/btn_round_withe"
        android:gravity="center_vertical|left"
        android:paddingLeft="15dp"
        android:text="@string/button_change_event"
        android:textColor="#9163A6"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_takephoto"
        android:layout_width="277dp"
        android:layout_height="58dp"
        android:text="@string/take_photo"
        android:clickable="true"
        android:enabled="true"
        android:background="@drawable/btn_round_black"
        android:textColor="#ffffffff"
        android:textSize="24dp"
        android:layout_gravity="right|bottom"
        android:fontFamily="Roboto"
        android:focusable="false"
        android:gravity="center_vertical|right"
        android:paddingRight="15dp"
        android:textStyle="bold" />

</FrameLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="false"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="false"
    android:layout_below="@+id/linearLayout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Bienvenido!"
        android:id="@+id/lbl_welcome"
        android:layout_below="@+id/message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffffff"
        android:textSize="26dp"
        android:textColor="#9163A6"
        android:paddingLeft="25dp"
        android:textStyle="bold"
        android:gravity="bottom" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre del evento"
        android:id="@+id/message"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffffff"
        android:gravity="left"
        android:textColor="#9163A6"
        android:paddingLeft="25dp"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/yourPictures"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:background="#ffffffff"
        android:gravity="left"
        android:paddingLeft="25dp"
        android:text="your pictures in http:\\india.inpix.online"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#9163A6"
        android:textSize="14dp" />
</LinearLayout>


</RelativeLayout>