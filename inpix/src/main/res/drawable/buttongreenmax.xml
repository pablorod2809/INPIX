<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#58b058" />
      <stroke
          android:width="1dp"
          android:color="#54B847" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="15dp"
          android:top="25dp"
          android:right="15dp"
          android:bottom="25dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#58b058"
          android:endColor="#1e781f"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#2f992f" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="15dp"
          android:top="25dp"
          android:right="15dp"
          android:bottom="25dp" />
    </shape>
  </item>
</selector>